<div class="container">
  <h2><%= @article.title.capitalize %></h2>
  <div class="content">
    <p><%= @article.content %></p>
  </div>
  <div class="d-flex mb-3">
    <div></div>
  </div>
  <div>
  <%= link_to 'Edit article', edit_article_path, class: "btn btn-warning text-decoration-none"  %>
  <%= link_to "Delete article", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger text-decoration-none"  %>
  </div>
  <%= link_to 'Return to the main menu', articles_path, class: "btn btn-info text-decoration-none mt-4" %>
</div>
 